<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - newProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/newProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar bg-dark fixed-top">
            <div class="container-fluid">
                <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    Menu
                </button>

                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title text-light" id="offcanvasNavbarLabel">Меню</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Закрити"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="d-grid gap-2">
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-lg" asp-area="" asp-controller="Home" asp-action="HomePage">Home</a>
                            </li>
                        </ul>

                        <ul class="d-grid gap-2">
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-lg" asp-area="" asp-controller="Home" asp-action="Index">Content</a>
                            </li>
                        </ul>

                        <ul class="d-grid gap-2">
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-lg" asp-area="" asp-controller="Home" asp-action="TopContent">Top content</a>
                            </li>
                        </ul>

                        <ul class="d-grid gap-2">
                            <li class="nav-item dropdown">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Випадаючий список
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a asp-controller="Home" asp-action="AboutUs" class="dropdown-item">About Us</a></li>
                                        <li><a asp-controller="Home" asp-action="Privacy" class="dropdown-item">Privacy</a></li>
                                        <li><a asp-controller="Home" asp-action="ContactUs" class="dropdown-item">Contact Us</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-dark">
        <div class="container">
            &copy; 2023 - newProject - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
