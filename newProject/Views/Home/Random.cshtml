@model newProject.Models.Content
<!DOCTYPE html>
<html>
<head>
    <title>Content Details</title>
</head>
<body>

    <h1>Content Details</h1>
    <p>ID: @Model.Id</p>
    <p>Info: @Model.Info</p>

    <div class="mt-3 d-flex">

        <form asp-action="RateUp" method="post" class="me-2">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-outline-success">
                Like
            </button>
        </form>

        <form asp-action="RateDown" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-outline-danger">
                Dislike
            </button>
        </form>

    </div>
</body>
</html>