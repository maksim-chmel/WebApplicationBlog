@model newProject.Models.Content
@{
    ViewData["Title"] = "Content";
}
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="mb-4">Content Details</h1>

        <div class="card overflow-auto bg-success text-white">
            <div class="card-body">
               
                <p class="card-text">Info: @Model.Info</p>

                <div class="mt-3 d-flex">
                    <form asp-action="RateUp" method="post" class="me-2">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <button type="submit" class="btn btn-outline-light">
                            Like
                        </button>
                    </form>

                    <form asp-action="RateDown" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <button type="submit" class="btn btn-outline-light">
                            Dislike
                        </button>
                    </form>
                </div>

            </div>
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <form asp-action="Back" method="get">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-outline-primary">
                    Back
                </button>
            </form>

            <form asp-action="Next" method="get">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-outline-primary">
                    Next
                </button>
            </form>
        </div>
    </div>

    
</body>

